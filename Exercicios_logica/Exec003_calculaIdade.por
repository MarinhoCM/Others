programa {
	funcao inicio() {
	   inteiro idade, idade_meses, idade_dias
	   
	   escreva("Digite sua idade: ")
	   leia(idade)
	   idade_meses = idade * 12
	   escreva("Sua idade em meses é : "+idade_meses+" !")
	   idade_dias = idade * 365
	   escreva(" Sua idade em dias é: "+idade_dias+" !")
	}
}
